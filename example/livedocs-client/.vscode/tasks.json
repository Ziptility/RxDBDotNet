{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: build",
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": [],
      "detail": "This runs the Next.js build script."
    },
    {
      "label": "npm: start",
      "type": "npm",
      "script": "start",
      "group": "none",
      "problemMatcher": [],
      "detail": "This runs the Next.js start script."
    },
    {
      "label": "npm: dev",
      "type": "npm",
      "script": "dev",
      "group": "none",
      "problemMatcher": [],
      "detail": "This runs the Next.js dev script."
    },
    {
      "label": "npm: lint",
      "type": "npm",
      "script": "lint",
      "group": "test",
      "problemMatcher": [],
      "detail": "This runs the Next.js lint script."
    },
    {
      "label": "Start Next.js with Debugging",
      "type": "npm",
      "script": "dev:debug",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "started server on .+, url: http://localhost:3000",
          "endsPattern": "^$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": false
      }
    }
  ]
}
